{
  "compilerOptions": {
    "lib": ["ES5"],
    "module": "es2015",
    "target": "es3",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "ignoreDeprecations": "5.0"
  },
  "include": ["./src/**/*.d.ts", "./src/**/*.ts", "./src/**/*.js"]
}
